def create_tables(file):
    filepath = "/home/vboxuser/Desktop/Licencjat/3x21_idxstats/" + file
    try:
        counter = 0
        lists = []
        with open(filepath, 'r', encoding='utf-8') as file:
            for line in file:
               # Pomijamy puste linie
             if line.strip():
                # Rozdzielamy linie na kolumny
                columns = line.strip().split('\t')  # Dostosuj separator ('\t' dla tabulatora, ',' dla przecinka)
                # pobranie jedynie chromosomow autosomalnych
                if columns[0] == "X":
                    break
                print(columns)

                lists.append(columns[2])  # Przechowujemy dane w liście 

            for i in lists:
                print("TEST: " + str(i))
            return 0

    except FileNotFoundError:
        print(f"Plik {filepath} nie istnieje.")
    except ValueError:
        print("Podano niepoprawne dane wejściowe.")    #return data